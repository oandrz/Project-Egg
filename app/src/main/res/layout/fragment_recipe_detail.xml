<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_banner_food"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/banner_image_height"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/container_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/space_normal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_recipe_title"
                        style="@style/HeaderFontWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_size"
                        android:layout_below="@id/tv_recipe_title"
                        android:layout_marginBottom="@dimen/space_normal"
                        android:layout_marginTop="@dimen/space_normal"
                        android:background="@color/white" />

                    <LinearLayout
                        android:id="@+id/container_serving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/divider"
                        android:layout_marginStart="@dimen/space_large"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/drawable_view_icon_size"
                            android:layout_height="@dimen/drawable_view_icon_size"
                            android:src="@drawable/ic_room_service_white" />

                        <TextView
                            style="@style/SmallFontWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/detail.serving.label" />

                        <TextView
                            android:id="@+id/tv_serving_count"
                            style="@style/NormalFontWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 people" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_preparation_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/drawable_view_icon_size"
                            android:layout_height="@dimen/drawable_view_icon_size"
                            android:src="@drawable/ic_access_time" />

                        <TextView
                            style="@style/SmallFontWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/detail.preparationtime.label" />

                        <TextView
                            android:id="@+id/tv_preparation_time"
                            style="@style/NormalFontWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 people" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_cooking_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/divider"
                        android:layout_marginEnd="@dimen/space_large"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/drawable_view_icon_size"
                            android:layout_height="@dimen/drawable_view_icon_size"
                            android:src="@drawable/ic_access_time" />

                        <TextView
                            style="@style/SmallFontWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/detail.cookingtime.label" />

                        <TextView
                            android:id="@+id/tv_cooking_time"
                            style="@style/NormalFontWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 people" />
                    </LinearLayout>
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_small"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/space_normal">

                        <TextView
                            style="@style/TitleFontRed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/space_normal"
                            android:drawableStart="@drawable/ic_shopping_basket"
                            android:gravity="center_vertical"
                            android:text="@string/detail.ingredient.label" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_ingredient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_normal" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_instruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_small"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/space_normal">

                        <TextView
                            style="@style/TitleFontRed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/space_normal"
                            android:drawableStart="@drawable/ic_local_dining"
                            android:gravity="center_vertical"
                            android:text="@string/detail.instruction.label" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_instruction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_normal" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_empty_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/detail.empty.label"
            android:visibility="gone"
            android:gravity="center" />
    </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>