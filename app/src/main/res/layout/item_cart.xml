<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/space_16dp">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="@dimen/cart_image_container_size"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_ingredient"
            android:layout_width="@dimen/iv_ingredient_size"
            android:layout_height="@dimen/iv_ingredient_size"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="@dimen/iv_clear_size"
            android:layout_height="@dimen/iv_clear_size"
            android:layout_gravity="top|end"
            android:background="@drawable/circular_background_red"
            android:src="@drawable/ic_clear_white"
            app:layout_anchor="@id/iv_ingredient"
            app:layout_anchorGravity="right" />
    </android.support.design.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/tv_ingredient_name"
        style="@style/NormalFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_8dp" />
</LinearLayout>