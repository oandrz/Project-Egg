<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/space_small">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_ingredient"
            android:layout_width="@dimen/iv_ingredient_size"
            android:layout_height="@dimen/iv_ingredient_size"
            android:layout_marginEnd="@dimen/space_small"
            android:layout_marginTop="@dimen/space_small" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="@dimen/iv_clear_size"
            android:layout_height="@dimen/iv_clear_size"
            android:layout_gravity="top|end"
            android:background="@drawable/circular_background_red"
            android:src="@drawable/ic_clear_white" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_ingredient_name"
        style="@style/NormalFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_normal"
        android:gravity="center" />
</LinearLayout>